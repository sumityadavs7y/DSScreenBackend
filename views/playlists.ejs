<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('partials/head') %>
    <title>Playlists - dsScreen</title>
    <style>
        /* Playlist Icon */
        .playlist-icon {
            width: 60px;
            height: 45px;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            border-radius: 8px;
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
            font-size: 1.5rem;
            box-shadow: 0 2px 8px rgba(102, 126, 234, 0.2);
        }
        
        /* Playlist Code Badge */
        .playlist-code {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            padding: 0.25rem 0.75rem;
            border-radius: 6px;
            font-family: 'Courier New', monospace;
            font-weight: 600;
            font-size: 1rem;
            letter-spacing: 1px;
            display: inline-block;
        }
        
        /* Status Badge */
        .status-badge {
            padding: 0.25rem 0.75rem;
            border-radius: 20px;
            font-size: 0.75rem;
            font-weight: 600;
            text-transform: uppercase;
        }
        .status-badge.active {
            background: #d4edda;
            color: #155724;
        }
        .status-badge.inactive {
            background: #f8d7da;
            color: #721c24;
        }
        
        /* Table Styling */
        .table > :not(caption) > * > * {
            padding: 1rem 0.75rem;
        }
        .table thead th {
            font-weight: 600;
            font-size: 0.875rem;
            text-transform: uppercase;
            letter-spacing: 0.5px;
            color: #6c757d;
            border-bottom: 2px solid #dee2e6;
        }
        .table tbody tr {
            transition: background-color 0.2s;
        }
        .table tbody tr:hover {
            background-color: rgba(102, 126, 234, 0.05);
        }
        
        /* Button Group */
        .btn-group-sm > .btn {
            padding: 0.375rem 0.75rem;
            font-size: 0.875rem;
        }
    </style>
</head>
<body>
    <%- include('partials/navbar', { user, company, userCompany, session }) %>

    <!-- Toast Notification Container -->
    <div class="toast-container" id="toastContainer"></div>

    <div class="content-wrapper">
        <div class="container">
            <!-- Navigation Tabs -->
            <%- include('partials/dashboard-tabs', { currentPage: 'playlists', user, company, userCompany, session }) %>

            <!-- Playlists Content -->
            <div class="card table-card">
                <div class="card-header bg-white border-0 py-3">
                    <div class="row align-items-center">
                        <div class="col">
                            <h4 class="mb-0"><i class="bi bi-collection-play"></i> Video Playlists</h4>
                            <small class="text-muted">Create looping playlists for continuous video playback</small>
                        </div>
                        <div class="col-auto">
                            <button class="btn btn-gradient" data-bs-toggle="modal" data-bs-target="#addPlaylistModal">
                                <i class="bi bi-plus-lg"></i> Add New Playlist
                            </button>
                        </div>
                    </div>
                </div>
                <div class="card-body p-0">
                    <% if (!playlists || playlists.length === 0) { %>
                        <!-- Empty State -->
                        <div class="empty-state">
                            <i class="bi bi-collection-play"></i>
                            <h3 class="mt-3">No Playlists Yet</h3>
                            <p class="text-muted">Create your first playlist to organize videos for continuous playback.</p>
                            <button class="btn btn-gradient mt-2" data-bs-toggle="modal" data-bs-target="#addPlaylistModal">
                                <i class="bi bi-plus-lg"></i> Create Playlist
                            </button>
                        </div>
                    <% } else { %>
                        <!-- Playlists Table -->
                        <div class="table-responsive">
                            <table class="table table-hover align-middle mb-0">
                                <thead class="table-light">
                                    <tr>
                                        <th>Playlist</th>
                                        <th width="120">Code</th>
                                        <th class="d-none d-lg-table-cell" width="100">Videos</th>
                                        <th class="d-none d-lg-table-cell" width="100">Status</th>
                                        <th class="d-none d-lg-table-cell" width="140">Created</th>
                                        <th width="180" class="text-center">Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% playlists.forEach(playlist => { %>
                                        <tr>
                                            <td>
                                                <div class="d-flex align-items-center">
                                                    <div class="playlist-icon me-3">
                                                        <i class="bi bi-play-circle"></i>
                                                    </div>
                                                    <div class="flex-grow-1">
                                                        <div class="fw-500 mb-1">
                                                            <%= playlist.name %>
                                                        </div>
                                                        <% if (playlist.description) { %>
                                                            <small class="text-muted">
                                                                <%= playlist.description.substring(0, 50) %><%= playlist.description.length > 50 ? '...' : '' %>
                                                            </small>
                                                        <% } %>
                                                    </div>
                                                </div>
                                            </td>
                                            <td>
                                                <span class="playlist-code"><%= playlist.code %></span>
                                            </td>
                                            <td class="d-none d-lg-table-cell text-center">
                                                <span class="badge bg-primary"><%= playlist.items ? playlist.items.length : 0 %> items</span>
                                            </td>
                                            <td class="d-none d-lg-table-cell">
                                                <span class="status-badge <%= playlist.isActive ? 'active' : 'inactive' %>">
                                                    <%= playlist.isActive ? 'Active' : 'Inactive' %>
                                                </span>
                                            </td>
                                            <td class="d-none d-lg-table-cell text-muted">
                                                <%= new Date(playlist.createdAt).toLocaleDateString() %>
                                            </td>
                                            <td>
                                                <div class="btn-group btn-group-sm d-flex justify-content-center" role="group">
                                                    <button class="btn btn-outline-success" 
                                                            onclick='manageTimeline("<%= playlist.id %>")'
                                                            title="Manage Timeline">
                                                        <i class="bi bi-film"></i>
                                                    </button>
                                                    <button class="btn btn-outline-secondary" 
                                                            onclick='editPlaylist(<%= JSON.stringify(playlist) %>)'
                                                            title="Edit">
                                                        <i class="bi bi-pencil"></i>
                                                    </button>
                                                    <button class="btn btn-outline-danger" 
                                                            onclick='deletePlaylist("<%= playlist.id %>", "<%= playlist.name.replace(/'/g, "\\'") %>", <%= playlist.items ? playlist.items.length : 0 %>)'
                                                            title="Delete">
                                                        <i class="bi bi-trash"></i>
                                                    </button>
                                                </div>
                                            </td>
                                        </tr>
                                    <% }) %>
                                </tbody>
                            </table>
                        </div>
                    <% } %>
                </div>
            </div>
        </div>
    </div>

    <!-- Add Playlist Modal -->
    <div class="modal fade" id="addPlaylistModal" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title"><i class="bi bi-plus-circle"></i> Create Video Playlist</h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                </div>
                <form action="/dashboard/playlists/create" method="POST">
                    <div class="modal-body">
                        <div class="mb-3">
                            <label for="playlistName" class="form-label">
                                <i class="bi bi-tag"></i> Playlist Name <span class="text-danger">*</span>
                            </label>
                            <input type="text" class="form-control form-control-lg" id="playlistName" name="name" placeholder="e.g., Lobby Display Playlist" required>
                            <small class="text-muted">A descriptive name for this playlist</small>
                        </div>
                        <div class="mb-3">
                            <label for="playlistDescription" class="form-label">
                                <i class="bi bi-journal-text"></i> Description
                            </label>
                            <textarea class="form-control" id="playlistDescription" name="description" rows="3" placeholder="e.g., Videos for lobby digital signage"></textarea>
                            <small class="text-muted">Optional description</small>
                        </div>
                        <div class="alert alert-info mb-0">
                            <i class="bi bi-info-circle"></i> 
                            <strong>Looping Playlist:</strong> Videos will play continuously in order, with each video looping for its specified duration.
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                            Cancel
                        </button>
                        <button type="submit" class="btn btn-gradient">
                            <i class="bi bi-check-lg"></i> Create Playlist
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- Edit Playlist Modal -->
    <div class="modal fade" id="editPlaylistModal" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title"><i class="bi bi-pencil-square"></i> Edit Playlist</h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                </div>
                <form id="editPlaylistForm" method="POST">
                    <div class="modal-body">
                        <div class="mb-3">
                            <label class="form-label">
                                <i class="bi bi-code-square"></i> Playlist Code
                            </label>
                            <div class="playlist-code" id="editPlaylistCode"></div>
                        </div>
                        <div class="mb-3">
                            <label for="editPlaylistName" class="form-label">
                                <i class="bi bi-tag"></i> Playlist Name <span class="text-danger">*</span>
                            </label>
                            <input type="text" class="form-control form-control-lg" id="editPlaylistName" name="name" required>
                        </div>
                        <div class="mb-3">
                            <label for="editPlaylistDescription" class="form-label">
                                <i class="bi bi-journal-text"></i> Description
                            </label>
                            <textarea class="form-control" id="editPlaylistDescription" name="description" rows="3"></textarea>
                        </div>
                        <div class="mb-3 p-3 bg-light rounded">
                            <small class="text-muted">
                                <i class="bi bi-info-circle"></i> 
                                <strong>Created:</strong> <span id="editPlaylistCreated"></span><br>
                                <strong>Videos:</strong> <span id="editPlaylistItems"></span> items
                            </small>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                            Cancel
                        </button>
                        <button type="submit" class="btn btn-gradient">
                            <i class="bi bi-check-lg"></i> Save Changes
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <%- include('partials/scripts') %>
    <script>
        function manageTimeline(playlistId) {
            window.location.href = `/dashboard/playlists/${playlistId}/timeline`;
        }

        function editPlaylist(playlist) {
            document.getElementById('editPlaylistCode').textContent = playlist.code;
            document.getElementById('editPlaylistName').value = playlist.name;
            document.getElementById('editPlaylistDescription').value = playlist.description || '';
            document.getElementById('editPlaylistCreated').textContent = new Date(playlist.createdAt).toLocaleString();
            document.getElementById('editPlaylistItems').textContent = playlist.items ? playlist.items.length : 0;
            
            document.getElementById('editPlaylistForm').action = `/dashboard/playlists/${playlist.id}/update`;
            
            const modal = new bootstrap.Modal(document.getElementById('editPlaylistModal'));
            modal.show();
        }

        function deletePlaylist(playlistId, playlistName, itemCount) {
            let message = `Are you sure you want to delete the playlist "${playlistName}"?`;
            
            if (itemCount > 0) {
                message += `\n\nThis playlist contains ${itemCount} video${itemCount !== 1 ? 's' : ''}.`;
            }
            
            message += '\n\n⚠️ This action cannot be undone!';
            
            if (confirm(message)) {
                const form = document.createElement('form');
                form.method = 'POST';
                form.action = `/dashboard/playlists/${playlistId}/delete`;
                document.body.appendChild(form);
                form.submit();
            }
        }
    </script>
</body>
</html>




