<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('partials/head') %>
    <link rel="stylesheet" href="/css/video-js.css">
    <title>Video Library - dsScreen</title>
    <style>
        /* Video Thumbnail */
        .video-thumbnail {
            width: 80px;
            height: 60px;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            border-radius: 8px;
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
            cursor: pointer;
            transition: all 0.3s;
            box-shadow: 0 2px 8px rgba(102, 126, 234, 0.2);
            overflow: hidden;
            position: relative;
        }
        .video-thumbnail:hover {
            transform: scale(1.05);
            box-shadow: 0 4px 12px rgba(102, 126, 234, 0.4);
        }
        .video-thumbnail i {
            font-size: 1.5rem;
        }
        .video-thumbnail img {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }
        .video-thumbnail .play-overlay {
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: rgba(0, 0, 0, 0.3);
            display: flex;
            align-items: center;
            justify-content: center;
            opacity: 0;
            transition: opacity 0.3s;
        }
        .video-thumbnail:hover .play-overlay {
            opacity: 1;
        }
        .video-thumbnail .play-overlay i {
            font-size: 2rem;
            color: white;
            filter: drop-shadow(0 2px 4px rgba(0, 0, 0, 0.5));
        }
        
        /* Video Name */
        .video-name-clickable {
            cursor: pointer;
            color: #333;
            font-weight: 500;
            transition: color 0.2s;
        }
        .video-name-clickable:hover {
            color: #667eea;
        }
        
        /* Table Styling */
        .table > :not(caption) > * > * {
            padding: 1rem 0.75rem;
        }
        .table thead th {
            font-weight: 600;
            font-size: 0.875rem;
            text-transform: uppercase;
            letter-spacing: 0.5px;
            color: #6c757d;
            border-bottom: 2px solid #dee2e6;
        }
        .table tbody tr {
            transition: background-color 0.2s;
        }
        .table tbody tr:hover {
            background-color: rgba(102, 126, 234, 0.05);
        }
        
        /* Checkbox Styling */
        .form-check-input {
            cursor: pointer;
            width: 1.25rem;
            height: 1.25rem;
            margin: 0;
        }
        .form-check-input:checked {
            background-color: #667eea;
            border-color: #667eea;
        }
        
        /* Button Group */
        .btn-group-sm > .btn {
            padding: 0.375rem 0.75rem;
            font-size: 0.875rem;
        }
        
        /* Video Player Modal */
        #videoPlayerModal .modal-dialog {
            max-width: 900px;
        }
        #videoPlayerModal .modal-body {
            padding: 0;
            background: #000;
        }
        .video-js {
            width: 100%;
            height: 500px;
        }
    </style>
</head>
<body>
    <%- include('partials/navbar', { user, company, userCompany, session }) %>

    <!-- Toast Notification Container -->
    <div class="toast-container" id="toastContainer"></div>

    <div class="content-wrapper">
        <div class="container">
            <!-- Navigation Tabs -->
            <%- include('partials/dashboard-tabs', { currentPage: 'videos', user, company, userCompany, session }) %>

            <!-- Video Library Content -->
            <div class="card table-card">
                <div class="card-header bg-white border-0 py-3">
                    <div class="row align-items-center">
                        <div class="col">
                            <h4 class="mb-0"><i class="bi bi-film"></i> Video Library</h4>
                        </div>
                        <div class="col-auto">
                            <% if (videos && videos.length > 0) { %>
                                <button id="deleteSelectedBtn" class="btn btn-danger me-2" onclick="showBulkDeleteModal()" style="display: none;">
                                    <i class="bi bi-trash"></i> <span class="d-none d-md-inline">Delete Selected</span>
                                </button>
                            <% } %>
                            <button class="btn btn-gradient" data-bs-toggle="modal" data-bs-target="#uploadModal">
                                <i class="bi bi-cloud-upload"></i> Upload Video
                            </button>
                        </div>
                    </div>
                </div>
                <div class="card-body p-0">
                    <% if (!videos || videos.length === 0) { %>
                        <!-- Empty State -->
                        <div class="empty-state">
                            <i class="bi bi-film"></i>
                            <h3 class="mt-3">No Videos Yet</h3>
                            <p class="text-muted">Upload your first video using the button above.</p>
                        </div>
                    <% } else { %>
                        <!-- Video Table -->
                        <div class="table-responsive">
                            <table class="table table-hover align-middle mb-0">
                                <thead class="table-light">
                                    <tr>
                                        <th width="50" class="text-center align-middle">
                                            <input type="checkbox" class="form-check-input m-0" id="selectAll" onchange="toggleSelectAll(this)">
                                        </th>
                                        <th>Video</th>
                                        <th class="d-none d-md-table-cell" width="120">Size</th>
                                        <th class="d-none d-lg-table-cell" width="100">Duration</th>
                                        <th class="d-none d-lg-table-cell" width="140">Uploaded</th>
                                        <th width="130" class="text-center">Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% videos.forEach(video => { %>
                                        <tr>
                                            <td class="text-center">
                                                <div class="form-check d-flex justify-content-center">
                                                    <input type="checkbox" class="form-check-input video-checkbox" 
                                                           value="<%= video.id %>" 
                                                           data-name="<%= video.fileName %>">
                                                </div>
                                            </td>
                                            <td>
                                                <div class="d-flex align-items-center">
                                                    <div class="video-thumbnail me-3" onclick='playVideo("<%= video.id %>", "<%= video.fileName.replace(/"/g, "&quot;") %>")'>
                                                        <% if (video.thumbnailPath) { %>
                                                            <img src="/<%= video.thumbnailPath %>" alt="<%= video.fileName %>" loading="lazy">
                                                            <div class="play-overlay">
                                                                <i class="bi bi-play-fill"></i>
                                                            </div>
                                                        <% } else { %>
                                                            <i class="bi bi-play-fill"></i>
                                                        <% } %>
                                                    </div>
                                                    <div class="flex-grow-1">
                                                        <div class="video-name-clickable mb-1" onclick='playVideo("<%= video.id %>", "<%= video.fileName.replace(/"/g, "&quot;") %>")'>
                                                            <%= video.fileName %>
                                                        </div>
                                                        <small class="text-muted d-md-none">
                                                            <%= formatFileSize(video.fileSize) %>
                                                        </small>
                                                    </div>
                                                </div>
                                            </td>
                                            <td class="d-none d-md-table-cell text-muted">
                                                <%= formatFileSize(video.fileSize) %>
                                            </td>
                                            <td class="d-none d-lg-table-cell text-muted">
                                                <%= video.duration ? formatDuration(video.duration) : 'N/A' %>
                                            </td>
                                            <td class="d-none d-lg-table-cell text-muted">
                                                <%= new Date(video.uploadedAt).toLocaleDateString() %>
                                            </td>
                                            <td>
                                                <div class="btn-group btn-group-sm d-flex justify-content-center" role="group">
                                                    <button class="btn btn-outline-primary" 
                                                            onclick='openEditModal("<%= video.id %>", "<%= video.fileName.replace(/"/g, '&quot;') %>")'
                                                            title="Edit">
                                                        <i class="bi bi-pencil"></i>
                                                    </button>
                                                    <button class="btn btn-outline-danger" 
                                                            onclick='deleteVideo("<%= video.id %>")'
                                                            title="Delete">
                                                        <i class="bi bi-trash"></i>
                                                    </button>
                                                </div>
                                            </td>
                                        </tr>
                                    <% }) %>
                                </tbody>
                            </table>
                        </div>
                    <% } %>
                </div>
            </div>
        </div>
    </div>

    <!-- Upload Modal -->
    <div class="modal fade" id="uploadModal" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title"><i class="bi bi-cloud-upload"></i> Upload Video</h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                </div>
                <form action="/dashboard/upload" method="POST" enctype="multipart/form-data">
                    <div class="modal-body">
                        <div class="mb-3">
                            <label for="video" class="form-label">Select Video File</label>
                            <input type="file" class="form-control" id="video" name="video" accept="video/*" required>
                            <small class="text-muted">Max size: 500MB. Supported: MP4, WebM, OGG, MOV, AVI</small>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                        <button type="submit" class="btn btn-gradient">
                            <i class="bi bi-upload"></i> Upload
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- Edit Modal -->
    <div class="modal fade" id="editModal" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title"><i class="bi bi-pencil"></i> Edit Video Name</h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                </div>
                <form id="editForm" method="POST">
                    <div class="modal-body">
                        <div class="mb-3">
                            <label for="editFileName" class="form-label">Video Name</label>
                            <input type="text" class="form-control" id="editFileName" name="fileName" required>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                        <button type="submit" class="btn btn-gradient">
                            <i class="bi bi-check-lg"></i> Save Changes
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- Bulk Delete Modal -->
    <div class="modal fade" id="bulkDeleteModal" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header bg-danger text-white">
                    <h5 class="modal-title"><i class="bi bi-trash"></i> Delete Videos</h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                </div>
                <form action="/dashboard/videos/bulk-delete" method="POST">
                    <div class="modal-body">
                        <p>Are you sure you want to delete the following videos?</p>
                        <div id="selectedVideosList" class="list-group mb-3"></div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                        <button type="submit" class="btn btn-danger">
                            <i class="bi bi-trash"></i> Delete
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- Video Player Modal -->
    <div class="modal fade" id="videoPlayerModal" tabindex="-1">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="videoPlayerTitle">
                        <i class="bi bi-play-circle"></i> Video Player
                    </h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <video id="videoPlayer" class="video-js vjs-default-skin" controls preload="auto">
                        Your browser does not support the video tag.
                    </video>
                </div>
            </div>
        </div>
    </div>

    <%- include('partials/scripts') %>
    <script src="/js/video.min.js"></script>
    <script>
        const editModal = new bootstrap.Modal(document.getElementById('editModal'));
        const bulkDeleteModal = new bootstrap.Modal(document.getElementById('bulkDeleteModal'));
        const videoPlayerModal = new bootstrap.Modal(document.getElementById('videoPlayerModal'));
        let player = null;

        function openEditModal(videoId, videoName) {
            document.getElementById('editForm').action = `/dashboard/videos/${videoId}/edit`;
            document.getElementById('editFileName').value = videoName;
            editModal.show();
        }

        function playVideo(videoId, videoName) {
            document.getElementById('videoPlayerTitle').innerHTML = `<i class="bi bi-play-circle"></i> ${videoName}`;
            
            if (player) {
                player.dispose();
                player = null;
            }

            let videoElement = document.getElementById('videoPlayer');
            
            if (!videoElement) {
                const modalBody = document.querySelector('#videoPlayerModal .modal-body');
                modalBody.innerHTML = '<video id="videoPlayer" class="video-js vjs-default-skin" controls preload="auto">Your browser does not support the video tag.</video>';
                videoElement = document.getElementById('videoPlayer');
            }
            
            player = videojs(videoElement, {
                controls: true,
                autoplay: false,
                preload: 'auto',
                fluid: false,
                responsive: true,
                aspectRatio: '16:9',
                sources: [{
                    src: `/api/videos/${videoId}/download`,
                    type: 'video/mp4'
                }]
            });

            videoPlayerModal.show();

            const modalElement = document.getElementById('videoPlayerModal');
            modalElement.addEventListener('shown.bs.modal', function () {
                if (player) {
                    player.play().catch(err => {
                        console.log('Autoplay prevented:', err);
                    });
                }
            }, { once: true });
        }

        document.getElementById('videoPlayerModal').addEventListener('hidden.bs.modal', function () {
            if (player) {
                player.pause();
            }
        });

        function toggleSelectAll(checkbox) {
            const checkboxes = document.querySelectorAll('.video-checkbox');
            checkboxes.forEach(cb => cb.checked = checkbox.checked);
            updateDeleteButtonVisibility();
        }

        function updateDeleteButtonVisibility() {
            const deleteBtn = document.getElementById('deleteSelectedBtn');
            if (deleteBtn) {
                const checkedBoxes = document.querySelectorAll('.video-checkbox:checked');
                deleteBtn.style.display = checkedBoxes.length > 0 ? 'inline-block' : 'none';
            }
        }

        // Add event listeners to all checkboxes
        document.addEventListener('DOMContentLoaded', function() {
            const checkboxes = document.querySelectorAll('.video-checkbox');
            checkboxes.forEach(cb => {
                cb.addEventListener('change', updateDeleteButtonVisibility);
            });
        });

        function deleteVideo(videoId) {
            if (confirm('Are you sure you want to delete this video?')) {
                // Create a form and submit it
                const form = document.createElement('form');
                form.method = 'POST';
                form.action = `/dashboard/videos/${videoId}/delete`;
                document.body.appendChild(form);
                form.submit();
            }
        }

        function showBulkDeleteModal() {
            const checkboxes = document.querySelectorAll('.video-checkbox:checked');
            
            if (checkboxes.length === 0) {
                alert('Please select at least one video to delete.');
                return;
            }
            
            const listHtml = Array.from(checkboxes).map(cb => 
                `<input type="hidden" name="videoIds[]" value="${cb.value}">
                 <div class="list-group-item">${cb.dataset.name}</div>`
            ).join('');
            
            document.getElementById('selectedVideosList').innerHTML = listHtml;
            bulkDeleteModal.show();
        }
    </script>
</body>
</html>

<%
function formatFileSize(bytes) {
    if (!bytes) return 'N/A';
    const sizes = ['Bytes', 'KB', 'MB', 'GB'];
    const i = Math.floor(Math.log(bytes) / Math.log(1024));
    return (bytes / Math.pow(1024, i)).toFixed(2) + ' ' + sizes[i];
}

function formatDuration(seconds) {
    if (!seconds) return 'N/A';
    const mins = Math.floor(seconds / 60);
    const secs = Math.floor(seconds % 60);
    return `${mins}:${secs.toString().padStart(2, '0')}`;
}
%>

