<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../partials/head') %>
    <title><%= title %> - Digital Signage</title>
    <style>
        body {
            background: #f8f9fa;
            min-height: 100vh;
            padding-bottom: 50px;
        }
        .page-title { color: #2d3748; }
        .breadcrumb-custom { background: rgba(102, 126, 234, 0.1); padding: 10px 15px; border-radius: 8px; }
        .breadcrumb-custom .breadcrumb-item a { color: #667eea; text-decoration: none; }
        .breadcrumb-custom .breadcrumb-item.active { color: #2d3748; }
        .content-card {
            background: white;
            border-radius: 15px;
            padding: 30px;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
        }
        .company-logo-sm {
            width: 40px;
            height: 40px;
            border-radius: 8px;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            display: inline-flex;
            align-items: center;
            justify-content: center;
            color: white;
            font-size: 14px;
            font-weight: bold;
            margin-right: 10px;
        }
        .stats-badge {
            display: inline-block;
            padding: 3px 8px;
            border-radius: 12px;
            font-size: 11px;
            margin-right: 5px;
        }
        .badge-users { background: #fef3c7; color: #92400e; }
        .badge-videos { background: #dbeafe; color: #1e40af; }
        .badge-playlists { background: #d1fae5; color: #065f46; }
    </style>
</head>
<body>
    <%- include('../partials/navbar', { user, session }) %>

    <div class="content-wrapper">
        <div class="container">
            <div class="mb-4">
                <h1 class="page-title"><i class="bi bi-building"></i> <%= title %></h1>
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb breadcrumb-custom">
                        <li class="breadcrumb-item"><a href="/admin">Dashboard</a></li>
                        <li class="breadcrumb-item active">Companies & Licenses</li>
                    </ol>
                </nav>
            </div>

        <div class="content-card">
            <!-- Tabs -->
            <ul class="nav nav-tabs mb-4" role="tablist">
                <li class="nav-item" role="presentation">
                    <button class="nav-link active" id="companies-tab" data-bs-toggle="tab" data-bs-target="#companies-pane" type="button" role="tab" onclick="setTabHash('companies')">
                        <i class="bi bi-building"></i> Companies (<%= companies.length %>)
                    </button>
                </li>
                <li class="nav-item" role="presentation">
                    <button class="nav-link" id="licenses-tab" data-bs-toggle="tab" data-bs-target="#licenses-pane" type="button" role="tab" onclick="setTabHash('licenses')">
                        <i class="bi bi-key-fill"></i> Registration Licenses (<%= licenses.length %>)
                    </button>
                </li>
            </ul>

            <!-- Tab Content -->
            <div class="tab-content">
                <!-- Companies Tab -->
                <div class="tab-pane fade show active" id="companies-pane" role="tabpanel">
                    <div class="row mb-4">
                        <div class="col-md-4">
                            <h4 class="mb-0"><i class="bi bi-building"></i> All Companies</h4>
                        </div>
                        <div class="col-md-8 text-end">
                            <input type="text" id="searchInput" class="form-control form-control-sm d-inline-block w-auto me-2" placeholder="Search companies...">
                            <button class="btn btn-primary btn-sm" data-bs-toggle="modal" data-bs-target="#addCompanyModal">
                                <i class="bi bi-plus-circle"></i> Add Company
                            </button>
                        </div>
                    </div>

            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Company</th>
                            <th>Statistics</th>
                            <th>License Expiry</th>
                            <th>Status</th>
                            <th>Created</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody id="companiesTable">
                        <% if (companies.length === 0) { %>
                            <tr>
                                <td colspan="6" class="text-center py-5">
                                    <i class="bi bi-building" style="font-size: 64px; color: #e2e8f0;"></i>
                                    <h5 class="mt-3 text-muted">No companies found</h5>
                                </td>
                            </tr>
                        <% } else { %>
                            <% companies.forEach(company => { %>
                                <tr data-company-name="<%= company.name.toLowerCase() %>">
                                    <td>
                                        <div class="d-flex align-items-center">
                                            <div class="company-logo-sm">
                                                <%= company.name.substring(0, 2).toUpperCase() %>
                                            </div>
                                            <div>
                                                <strong><%= company.name %></strong>
                                                <br><small class="text-muted"><%= company.slug %></small>
                                            </div>
                                        </div>
                                    </td>
                                    <td>
                                        <span class="stats-badge badge-users">
                                            <i class="bi bi-people-fill"></i> <%= company.companyUsers ? company.companyUsers.length : 0 %>
                                        </span>
                                        <span class="stats-badge badge-videos">
                                            <i class="bi bi-film"></i> <%= company.videos ? company.videos.length : 0 %>
                                        </span>
                                        <span class="stats-badge badge-playlists">
                                            <i class="bi bi-play-circle-fill"></i> <%= company.playlists ? company.playlists.length : 0 %>
                                        </span>
                                    </td>
                                    <td>
                                        <% if (company.activeLicense) { 
                                            const expiryDate = new Date(company.activeLicense.expiresAt);
                                            const isExpired = expiryDate < new Date();
                                        %>
                                            <div>
                                                <% if (isExpired) { %>
                                                    <span class="badge bg-danger">
                                                        <i class="bi bi-exclamation-triangle"></i> Expired
                                                    </span>
                                                <% } else { %>
                                                    <span class="badge bg-success">
                                                        <i class="bi bi-check-circle"></i> Valid
                                                    </span>
                                                <% } %>
                                                <br>
                                                <small class="<%= isExpired ? 'text-danger' : 'text-muted' %>">
                                                    <%= expiryDate.toLocaleDateString() %>
                                                </small>
                                            </div>
                                        <% } else { %>
                                            <span class="badge bg-warning text-dark">
                                                <i class="bi bi-dash-circle"></i> No License
                                            </span>
                                        <% } %>
                                    </td>
                                    <td>
                                        <% if (company.isActive) { %>
                                            <span class="badge bg-success">Active</span>
                                        <% } else { %>
                                            <span class="badge bg-danger">Inactive</span>
                                        <% } %>
                                    </td>
                                    <td><%= new Date(company.createdAt).toLocaleDateString() %></td>
                                    <td>
                                        <a href="/admin/companies/<%= company.id %>" class="btn btn-sm btn-primary me-1" title="View Details">
                                            <i class="bi bi-eye"></i>
                                        </a>
                                        <button class="btn btn-sm btn-info me-1" onclick="loginAsCompany('<%= company.id %>')" title="Login as Company">
                                            <i class="bi bi-box-arrow-in-right"></i>
                                        </button>
                                        <button class="btn btn-sm <%= company.isActive ? 'btn-danger' : 'btn-success' %>" onclick="toggleCompanyActive('<%= company.id %>', this)" title="<%= company.isActive ? 'Deactivate' : 'Activate' %>">
                                            <i class="bi <%= company.isActive ? 'bi-x-circle' : 'bi-check-circle' %>"></i>
                                        </button>
                                    </td>
                                </tr>
                            <% }) %>
                        <% } %>
                    </tbody>
                </table>
            </div>
        </div>
        <!-- End Companies Tab -->

        <!-- Licenses Tab -->
        <div class="tab-pane fade" id="licenses-pane" role="tabpanel">
            <div class="row mb-4">
                <div class="col-md-8">
                    <h4 class="mb-0"><i class="bi bi-key-fill"></i> Registration Licenses</h4>
                    <p class="text-muted mb-0 small">Generate secure registration links for new companies</p>
                </div>
                <div class="col-md-4 text-end">
                    <button class="btn btn-success btn-sm" data-bs-toggle="modal" data-bs-target="#generateLicenseModal">
                        <i class="bi bi-plus-circle"></i> Generate License
                    </button>
                </div>
            </div>

            <!-- License Stats -->
            <div class="row mb-4">
                <div class="col-md-3 col-6 mb-3">
                    <div class="card text-center border-success">
                        <div class="card-body">
                            <h4 class="text-success mb-0"><%= licenses.filter(l => !l.isUsed && new Date(l.expiresAt) > new Date()).length %></h4>
                            <small class="text-muted">Active</small>
                        </div>
                    </div>
                </div>
                <div class="col-md-3 col-6 mb-3">
                    <div class="card text-center border-info">
                        <div class="card-body">
                            <h4 class="text-info mb-0"><%= licenses.filter(l => l.isUsed && l.companyId).length %></h4>
                            <small class="text-muted">Assigned</small>
                        </div>
                    </div>
                </div>
                <div class="col-md-3 col-6 mb-3">
                    <div class="card text-center border-secondary">
                        <div class="card-body">
                            <h4 class="text-secondary mb-0"><%= licenses.filter(l => l.isUsed && !l.companyId).length %></h4>
                            <small class="text-muted">Used</small>
                        </div>
                    </div>
                </div>
                <div class="col-md-3 col-6 mb-3">
                    <div class="card text-center border-danger">
                        <div class="card-body">
                            <h4 class="text-danger mb-0"><%= licenses.filter(l => !l.isUsed && new Date(l.expiresAt) <= new Date()).length %></h4>
                            <small class="text-muted">Expired</small>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Licenses Table -->
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Status</th>
                            <th>Company</th>
                            <th>Created</th>
                            <th>Expires</th>
                            <th>Max Users</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% if (licenses.length === 0) { %>
                            <tr>
                                <td colspan="6" class="text-center py-5">
                                    <i class="bi bi-key" style="font-size: 64px; color: #e2e8f0;"></i>
                                    <h5 class="mt-3 text-muted">No licenses generated yet</h5>
                                    <button class="btn btn-success mt-2" data-bs-toggle="modal" data-bs-target="#generateLicenseModal">
                                        <i class="bi bi-plus-circle"></i> Generate First License
                                    </button>
                                </td>
                            </tr>
                        <% } else { %>
                            <% licenses.forEach(license => { 
                                const isExpired = new Date(license.expiresAt) <= new Date();
                                const isActive = !license.isUsed && !isExpired;
                            %>
                                <tr>
                                    <td>
                                        <% if (license.isUsed && license.companyId) { %>
                                            <span class="badge bg-info">Assigned</span>
                                        <% } else if (license.isUsed) { %>
                                            <span class="badge bg-secondary">Used</span>
                                        <% } else if (isExpired) { %>
                                            <span class="badge bg-danger">Expired</span>
                                        <% } else { %>
                                            <span class="badge bg-success">Active</span>
                                        <% } %>
                                    </td>
                                    <td>
                                        <% if (license.company) { %>
                                            <a href="/admin/companies/<%= license.company.id %>" class="fw-bold">
                                                <i class="bi bi-building"></i> <%= license.company.name %>
                                            </a>
                                            <% if (license.isUsed && license.companyId) { %>
                                                <br><small class="text-info"><i class="bi bi-arrow-repeat"></i> Extended License</small>
                                            <% } %>
                                        <% } else if (license.companyName) { %>
                                            <%= license.companyName %>
                                            <br><small class="text-muted">Awaiting registration</small>
                                        <% } else { %>
                                            <span class="text-muted">Not specified</span>
                                            <br><small class="text-muted">Awaiting registration</small>
                                        <% } %>
                                    </td>
                                    <td><%= new Date(license.createdAt).toLocaleDateString() %></td>
                                    <td>
                                        <%= new Date(license.expiresAt).toLocaleDateString() %>
                                        <% if (isExpired && !license.isUsed) { %>
                                            <i class="bi bi-exclamation-triangle-fill text-danger ms-1"></i>
                                        <% } %>
                                    </td>
                                    <td><%= license.maxUsers %></td>
                                    <td>
                                        <button class="btn btn-sm btn-info" onclick="viewLicense('<%= license.id %>', '<%= license.token %>', '<%= license.companyName || '' %>', '<%= license.notes || '' %>', <%= isActive %>, <%= license.companyId ? true : false %>, '<%= license.company ? license.company.name : '' %>')">
                                            <i class="bi bi-eye"></i>
                                        </button>
                                        <% if (!license.isUsed || (license.isUsed && license.companyId)) { %>
                                            <button class="btn btn-sm btn-danger" onclick="deleteLicense('<%= license.id %>', <%= license.isUsed && license.companyId ? true : false %>)">
                                                <i class="bi bi-trash"></i>
                                            </button>
                                        <% } %>
                                    </td>
                                </tr>
                            <% }) %>
                        <% } %>
                    </tbody>
                </table>
            </div>
        </div>
        <!-- End Licenses Tab -->
    </div>
    <!-- End Tab Content -->
        </div>
        </div>
    </div>

    <!-- Add Company Modal -->
    <div class="modal fade" id="addCompanyModal" tabindex="-1">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title"><i class="bi bi-building"></i> Add New Company</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <form id="addCompanyForm">
                        <div class="mb-3">
                            <label class="form-label">Company Name *</label>
                            <input type="text" class="form-control" name="name" id="companyName" required>
                        </div>
                        
                        <div class="mb-3">
                            <label class="form-label">Description</label>
                            <textarea class="form-control" name="description" id="companyDescription" rows="2"></textarea>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label class="form-label">Email</label>
                                <input type="email" class="form-control" name="email" id="companyEmail">
                            </div>
                            <div class="col-md-6 mb-3">
                                <label class="form-label">Phone Number</label>
                                <input type="tel" class="form-control" name="phoneNumber" id="companyPhone">
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label class="form-label">Website</label>
                                <input type="url" class="form-control" name="website" id="companyWebsite" placeholder="https://example.com">
                            </div>
                            <div class="col-md-6 mb-3">
                                <label class="form-label">Address</label>
                                <input type="text" class="form-control" name="address" id="companyAddress">
                            </div>
                        </div>

                        <div class="mb-3 form-check">
                            <input type="checkbox" class="form-check-input" name="isActive" id="companyActive" checked>
                            <label class="form-check-label" for="companyActive">Active Company</label>
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="button" class="btn btn-primary" onclick="saveNewCompany()">
                        <i class="bi bi-save"></i> Create Company
                    </button>
                </div>
            </div>
        </div>
    </div>

    <!-- Generate License Modal -->
    <div class="modal fade" id="generateLicenseModal" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title"><i class="bi bi-key-fill"></i> Generate Registration License</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <form id="generateLicenseForm">
                        <div class="mb-3">
                            <label class="form-label">License Type <span class="text-danger">*</span></label>
                            <select class="form-select" id="licenseType" onchange="toggleLicenseType()" required>
                                <option value="new">New Company Registration</option>
                                <option value="existing">Extend Existing Company</option>
                            </select>
                        </div>

                        <!-- For New Company -->
                        <div id="newCompanyFields">
                            <div class="mb-3">
                                <label class="form-label">Company Name (Optional)</label>
                                <input type="text" class="form-control" name="companyName" id="newCompanyName" placeholder="Pre-fill company name">
                                <small class="text-muted">If specified, this name will be pre-filled during registration</small>
                            </div>
                        </div>

                        <!-- For Existing Company -->
                        <div id="existingCompanyFields" style="display: none;">
                            <div class="mb-3">
                                <label class="form-label">Select Company <span class="text-danger">*</span></label>
                                <select class="form-select" name="existingCompanyId" id="existingCompanySelect">
                                    <option value="">-- Select Company --</option>
                                    <% companies.forEach(company => { %>
                                        <option value="<%= company.id %>"><%= company.name %> (<%= company.slug %>)</option>
                                    <% }) %>
                                </select>
                                <small class="text-muted">This will extend the selected company's license</small>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">License Duration (Days) <span class="text-danger">*</span></label>
                            <input type="number" class="form-control" name="expiryDays" min="1" value="365" required>
                            <small class="text-muted" id="expiryHint">Number of days until the license expires</small>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Max Users</label>
                            <input type="number" class="form-control" name="maxUsers" min="1" value="5">
                            <small class="text-muted">Maximum users allowed</small>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Storage Limit (MB)</label>
                            <input type="number" class="form-control" name="maxStorageMB" min="1" value="500" step="1">
                            <small class="text-muted">Maximum storage in megabytes (default: 500 MB)</small>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Notes (Optional)</label>
                            <textarea class="form-control" name="notes" rows="2" placeholder="Internal notes about this license"></textarea>
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="button" class="btn btn-success" onclick="generateLicense()">
                        <i class="bi bi-key-fill"></i> Generate License
                    </button>
                </div>
            </div>
        </div>
    </div>

    <!-- View License Modal -->
    <div class="modal fade" id="viewLicenseModal" tabindex="-1">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title"><i class="bi bi-key"></i> License Details</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <div id="licenseDetails"></div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>

    <%- include('../partials/scripts') %>
    <script>
        // Tab state management with URL hash
        function setTabHash(tabName) {
            window.location.hash = tabName;
        }

        // Restore tab state from URL hash on page load
        function restoreTabFromHash() {
            const hash = window.location.hash.substring(1); // Remove the '#'
            
            if (hash === 'licenses') {
                // Activate licenses tab
                const licensesTab = document.getElementById('licenses-tab');
                const companiesTab = document.getElementById('companies-tab');
                const licensesPane = document.getElementById('licenses-pane');
                const companiesPane = document.getElementById('companies-pane');
                
                companiesTab.classList.remove('active');
                licensesTab.classList.add('active');
                
                companiesPane.classList.remove('show', 'active');
                licensesPane.classList.add('show', 'active');
            }
            // If hash is 'companies' or empty, companies tab is already active by default
        }

        // Handle browser back/forward buttons
        window.addEventListener('hashchange', function() {
            restoreTabFromHash();
        });

        // Restore tab state when page loads
        document.addEventListener('DOMContentLoaded', function() {
            restoreTabFromHash();
        });

        // Search functionality
        document.getElementById('searchInput').addEventListener('input', function(e) {
            const searchTerm = e.target.value.toLowerCase();
            const rows = document.querySelectorAll('#companiesTable tr[data-company-name]');
            
            rows.forEach(row => {
                const companyName = row.getAttribute('data-company-name');
                row.style.display = companyName.includes(searchTerm) ? '' : 'none';
            });
        });

        // Save new company
        function saveNewCompany() {
            const form = document.getElementById('addCompanyForm');
            if (!form.checkValidity()) {
                form.reportValidity();
                return;
            }

            const formData = new FormData(form);
            const data = {
                name: formData.get('name'),
                description: formData.get('description'),
                email: formData.get('email'),
                phoneNumber: formData.get('phoneNumber'),
                website: formData.get('website'),
                address: formData.get('address'),
                isActive: formData.get('isActive') === 'on'
            };

            fetch('/admin/companies/create', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify(data)
            })
            .then(res => res.json())
            .then(data => {
                if (data.success) {
                    location.reload();
                } else {
                    alert(data.message || 'Error creating company');
                }
            })
            .catch(err => {
                console.error(err);
                alert('Error creating company: ' + err.message);
            });
        }

        // Login as company
        function loginAsCompany(companyId) {
            if (!confirm('Login as this company? You will be redirected to the company dashboard as an owner.')) {
                return;
            }

            fetch(`/admin/companies/${companyId}/login-as`, {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                }
            })
            .then(res => res.json())
            .then(data => {
                if (data.success) {
                    window.location.href = '/dashboard';
                } else {
                    alert(data.message || 'Error logging in as company');
                }
            })
            .catch(err => {
                console.error(err);
                alert('Error logging in as company');
            });
        }

        // Toggle company active status
        function toggleCompanyActive(companyId, button) {
            if (!confirm('Are you sure you want to change the company status?')) {
                return;
            }

            button.disabled = true;
            button.innerHTML = '<span class="spinner-border spinner-border-sm"></span>';

            fetch(`/admin/companies/${companyId}/toggle-active`, {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                }
            })
            .then(res => res.json())
            .then(data => {
                if (data.success) {
                    location.reload();
                } else {
                    alert(data.message || 'Error updating company');
                    button.disabled = false;
                    button.innerHTML = '<i class="bi bi-x-circle"></i>';
                }
            })
            .catch(err => {
                console.error(err);
                alert('Error updating company');
                button.disabled = false;
                button.innerHTML = '<i class="bi bi-x-circle"></i>';
            });
        }

        // Toggle license type fields
        function toggleLicenseType() {
            const licenseType = document.getElementById('licenseType').value;
            const newFields = document.getElementById('newCompanyFields');
            const existingFields = document.getElementById('existingCompanyFields');
            const expiryHint = document.getElementById('expiryHint');
            const existingSelect = document.getElementById('existingCompanySelect');
            const newCompanyName = document.getElementById('newCompanyName');

            if (licenseType === 'existing') {
                newFields.style.display = 'none';
                existingFields.style.display = 'block';
                expiryHint.textContent = 'This will extend the company\'s license by this many days';
                existingSelect.required = true;
                newCompanyName.required = false;
            } else {
                newFields.style.display = 'block';
                existingFields.style.display = 'none';
                expiryHint.textContent = 'Number of days until the license expires';
                existingSelect.required = false;
                newCompanyName.required = false;
            }
        }

        // Generate license
        async function generateLicense() {
            const form = document.getElementById('generateLicenseForm');
            if (!form.checkValidity()) {
                form.reportValidity();
                return;
            }

            const formData = new FormData(form);
            const licenseType = document.getElementById('licenseType').value;
            
            const data = {
                expiryDays: formData.get('expiryDays'),
                maxUsers: formData.get('maxUsers'),
                maxStorageMB: formData.get('maxStorageMB'),
                notes: formData.get('notes'),
            };

            if (licenseType === 'existing') {
                data.existingCompanyId = formData.get('existingCompanyId');
                if (!data.existingCompanyId) {
                    alert('Please select a company');
                    return;
                }

                // Check if company already has a license assigned
                const hasExistingLicense = await checkCompanyHasLicense(data.existingCompanyId);
                if (hasExistingLicense) {
                    const confirmed = confirm(
                        '⚠️ WARNING: This company already has an assigned license!\n\n' +
                        'Assigning a new license will DELETE the old license and replace it with the new one.\n\n' +
                        'Do you want to continue?'
                    );
                    if (!confirmed) {
                        return;
                    }
                }
            } else {
                data.companyName = formData.get('companyName');
            }

            try {
                const response = await fetch('/admin/licenses/create', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify(data),
                });

                const result = await response.json();

                if (result.success) {
                    const modal = bootstrap.Modal.getInstance(document.getElementById('generateLicenseModal'));
                    modal.hide();

                    // Show appropriate success message
                    if (licenseType === 'existing') {
                        alert(`License generated successfully!\n\nThis license will extend the selected company's access.\n\nRegistration URL:\n${result.registrationUrl}`);
                    } else {
                        alert(`License generated successfully!\n\nRegistration URL:\n${result.registrationUrl}\n\nShare this URL with the person who will register the company.`);
                    }
                    
                    // Reload page to show new license
                    window.location.reload();
                } else {
                    alert(result.message || 'Error creating license');
                }
            } catch (error) {
                console.error('Create license error:', error);
                alert('Error creating license');
            }
        }

        // Check if company has an existing assigned license
        async function checkCompanyHasLicense(companyId) {
            try {
                const response = await fetch(`/admin/companies/${companyId}/has-license`);
                const result = await response.json();
                return result.hasLicense;
            } catch (error) {
                console.error('Check license error:', error);
                return false;
            }
        }

        // View license details
        function viewLicense(id, token, companyName, notes, isActive, isAssigned, assignedCompanyName) {
            const baseUrl = window.location.origin;
            const registrationUrl = `${baseUrl}/license-signup/${token}`;

            let html = '';

            // If assigned to existing company
            if (isAssigned) {
                html += `
                    <div class="alert alert-info mb-3">
                        <i class="bi bi-building me-2"></i>
                        <strong>Assigned License:</strong> This license extends the license for <strong>${assignedCompanyName}</strong>
                    </div>
                `;
            }

            html += `
                <div class="mb-3">
                    <label class="form-label fw-bold">Registration URL:</label>
                    <div class="input-group">
                        <input type="text" class="form-control font-monospace" value="${registrationUrl}" readonly id="licenseUrlInput">
                        <button class="btn btn-outline-primary" onclick="copyToClipboard('${registrationUrl}', this)">
                            <i class="bi bi-clipboard"></i> Copy
                        </button>
                    </div>
                    ${isAssigned ? '<small class="text-muted">This URL can be used to add more users to the company</small>' : ''}
                </div>
                <div class="mb-3">
                    <label class="form-label fw-bold">License Token:</label>
                    <input type="text" class="form-control font-monospace" value="${token}" readonly>
                </div>
            `;

            if (companyName && !isAssigned) {
                html += `
                    <div class="mb-3">
                        <label class="form-label fw-bold">Pre-filled Company Name:</label>
                        <p class="mb-0">${companyName}</p>
                    </div>
                `;
            }

            if (notes) {
                html += `
                    <div class="mb-3">
                        <label class="form-label fw-bold">Notes:</label>
                        <p class="mb-0">${notes}</p>
                    </div>
                `;
            }

            if (!isActive && !isAssigned) {
                html += `
                    <div class="alert alert-warning mb-0">
                        <i class="bi bi-exclamation-triangle-fill me-2"></i>
                        This license is no longer active (expired or already used)
                    </div>
                `;
            }

            document.getElementById('licenseDetails').innerHTML = html;
            const modal = new bootstrap.Modal(document.getElementById('viewLicenseModal'));
            modal.show();
        }

        // Copy to clipboard
        function copyToClipboard(text, button) {
            navigator.clipboard.writeText(text).then(() => {
                const originalHtml = button.innerHTML;
                button.innerHTML = '<i class="bi bi-check"></i> Copied!';
                button.classList.remove('btn-outline-primary');
                button.classList.add('btn-success');
                setTimeout(() => {
                    button.innerHTML = originalHtml;
                    button.classList.remove('btn-success');
                    button.classList.add('btn-outline-primary');
                }, 2000);
            }).catch(err => {
                console.error('Copy failed:', err);
                alert('Failed to copy to clipboard');
            });
        }

        // Delete license
        async function deleteLicense(id, isAssigned) {
            const message = isAssigned 
                ? 'Are you sure you want to revoke this license extension? This will NOT affect the company\'s current license expiry.'
                : 'Are you sure you want to delete this license? This action cannot be undone.';
            
            if (!confirm(message)) {
                return;
            }

            try {
                const response = await fetch(`/admin/licenses/${id}`, {
                    method: 'DELETE',
                });

                const result = await response.json();

                if (result.success) {
                    alert('License deleted successfully');
                    window.location.reload();
                } else {
                    alert(result.message || 'Error deleting license');
                }
            } catch (error) {
                console.error('Delete license error:', error);
                alert('Error deleting license');
            }
        }
    </script>
