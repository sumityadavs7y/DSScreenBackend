<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../partials/head') %>
    <title><%= title %> - dsScreen</title>
    <style>
        body {
            background: #f8f9fa;
            min-height: 100vh;
            padding-bottom: 50px;
        }
        .page-title { color: #2d3748; }
        .breadcrumb-custom { background: rgba(102, 126, 234, 0.1); padding: 10px 15px; border-radius: 8px; }
        .breadcrumb-custom .breadcrumb-item a { color: #667eea; text-decoration: none; }
        .breadcrumb-custom .breadcrumb-item.active { color: #2d3748; }
        .content-card {
            background: white;
            border-radius: 15px;
            padding: 30px;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
        }
        .company-logo-sm {
            width: 40px;
            height: 40px;
            border-radius: 8px;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            display: inline-flex;
            align-items: center;
            justify-content: center;
            color: white;
            font-size: 14px;
            font-weight: bold;
            margin-right: 10px;
        }
        .stats-badge {
            display: inline-block;
            padding: 3px 8px;
            border-radius: 12px;
            font-size: 11px;
            margin-right: 5px;
        }
        .badge-users { background: #fef3c7; color: #92400e; }
        .badge-videos { background: #dbeafe; color: #1e40af; }
        .badge-playlists { background: #d1fae5; color: #065f46; }
    </style>
</head>
<body>
    <%- include('../partials/navbar', { user }) %>

    <div class="content-wrapper">
        <div class="container">
            <div class="mb-4">
                <h1 class="page-title"><i class="bi bi-building"></i> <%= title %></h1>
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb breadcrumb-custom">
                        <li class="breadcrumb-item"><a href="/admin">Dashboard</a></li>
                        <li class="breadcrumb-item active">Companies</li>
                    </ol>
                </nav>
            </div>

        <div class="content-card">
            <div class="row mb-4">
                <div class="col-md-6">
                    <h4 class="mb-0"><i class="bi bi-building"></i> All Companies (<%= companies.length %>)</h4>
                </div>
                <div class="col-md-6 text-end">
                    <input type="text" id="searchInput" class="form-control form-control-sm d-inline-block w-auto" placeholder="Search companies...">
                </div>
            </div>

            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Company</th>
                            <th>Statistics</th>
                            <th>Status</th>
                            <th>Created</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody id="companiesTable">
                        <% if (companies.length === 0) { %>
                            <tr>
                                <td colspan="5" class="text-center py-5">
                                    <i class="bi bi-building" style="font-size: 64px; color: #e2e8f0;"></i>
                                    <h5 class="mt-3 text-muted">No companies found</h5>
                                </td>
                            </tr>
                        <% } else { %>
                            <% companies.forEach(company => { %>
                                <tr data-company-name="<%= company.name.toLowerCase() %>">
                                    <td>
                                        <div class="d-flex align-items-center">
                                            <div class="company-logo-sm">
                                                <%= company.name.substring(0, 2).toUpperCase() %>
                                            </div>
                                            <div>
                                                <strong><%= company.name %></strong>
                                                <br><small class="text-muted"><%= company.slug %></small>
                                            </div>
                                        </div>
                                    </td>
                                    <td>
                                        <span class="stats-badge badge-users">
                                            <i class="bi bi-people-fill"></i> <%= company.companyUsers ? company.companyUsers.length : 0 %>
                                        </span>
                                        <span class="stats-badge badge-videos">
                                            <i class="bi bi-film"></i> <%= company.videos ? company.videos.length : 0 %>
                                        </span>
                                        <span class="stats-badge badge-playlists">
                                            <i class="bi bi-play-circle-fill"></i> <%= company.playlists ? company.playlists.length : 0 %>
                                        </span>
                                    </td>
                                    <td>
                                        <% if (company.isActive) { %>
                                            <span class="badge bg-success">Active</span>
                                        <% } else { %>
                                            <span class="badge bg-danger">Inactive</span>
                                        <% } %>
                                    </td>
                                    <td><%= new Date(company.createdAt).toLocaleDateString() %></td>
                                    <td>
                                        <a href="/admin/companies/<%= company.id %>" class="btn btn-sm btn-primary me-1">
                                            <i class="bi bi-eye"></i> View
                                        </a>
                                        <button class="btn btn-sm <%= company.isActive ? 'btn-danger' : 'btn-success' %>" onclick="toggleCompanyActive('<%= company.id %>', this)">
                                            <i class="bi <%= company.isActive ? 'bi-x-circle' : 'bi-check-circle' %>"></i>
                                        </button>
                                    </td>
                                </tr>
                            <% }) %>
                        <% } %>
                    </tbody>
                </table>
            </div>
        </div>
        </div>
    </div>

    <%- include('../partials/scripts') %>
    <script>
        // Search functionality
        document.getElementById('searchInput').addEventListener('input', function(e) {
            const searchTerm = e.target.value.toLowerCase();
            const rows = document.querySelectorAll('#companiesTable tr[data-company-name]');
            
            rows.forEach(row => {
                const companyName = row.getAttribute('data-company-name');
                row.style.display = companyName.includes(searchTerm) ? '' : 'none';
            });
        });

        // Toggle company active status
        function toggleCompanyActive(companyId, button) {
            if (!confirm('Are you sure you want to change the company status?')) {
                return;
            }

            button.disabled = true;
            button.innerHTML = '<span class="spinner-border spinner-border-sm"></span>';

            fetch(`/admin/companies/${companyId}/toggle-active`, {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                }
            })
            .then(res => res.json())
            .then(data => {
                if (data.success) {
                    location.reload();
                } else {
                    alert(data.message || 'Error updating company');
                    button.disabled = false;
                    button.innerHTML = '<i class="bi bi-x-circle"></i>';
                }
            })
            .catch(err => {
                console.error(err);
                alert('Error updating company');
                button.disabled = false;
                button.innerHTML = '<i class="bi bi-x-circle"></i>';
            });
        }
    </script>
</body>
</html>


