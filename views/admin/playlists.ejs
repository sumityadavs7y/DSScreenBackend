<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../partials/head') %>
    <title><%= title %> - Digital Signage</title>
    <style>
        body { background: #f8f9fa; min-height: 100vh; padding-bottom: 50px; }
        .page-title { color: #2d3748; }
        .breadcrumb-custom { background: rgba(102, 126, 234, 0.1); padding: 10px 15px; border-radius: 8px; }
        .breadcrumb-custom .breadcrumb-item a { color: #667eea; text-decoration: none; }
        .breadcrumb-custom .breadcrumb-item.active { color: #2d3748; }
        .content-card { background: white; border-radius: 15px; padding: 30px; box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1); }
    </style>
</head>
<body>
    <%- include('../partials/navbar', { user, session }) %>

    <div class="content-wrapper">
        <div class="container">
            <div class="mb-4">
                <h1 class="page-title"><i class="bi bi-play-circle-fill"></i> <%= title %></h1>
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb breadcrumb-custom">
                        <li class="breadcrumb-item"><a href="/admin">Dashboard</a></li>
                        <li class="breadcrumb-item active">Playlists</li>
                    </ol>
                </nav>
            </div>

        <div class="content-card">
            <h4 class="mb-4"><i class="bi bi-play-circle-fill"></i> All Playlists (<%= playlists.length %>)</h4>
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Playlist</th>
                            <th>Company</th>
                            <th>Creator</th>
                            <th>Code</th>
                            <th>Videos</th>
                            <th>Created</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% playlists.forEach(p => { %>
                            <tr>
                                <td>
                                    <strong><%= p.name %></strong>
                                    <% if (p.description) { %>
                                        <br><small class="text-muted"><%= p.description.substring(0, 50) %></small>
                                    <% } %>
                                </td>
                                <td><%= p.company.name %></td>
                                <td><%= p.creator.firstName %> <%= p.creator.lastName %></td>
                                <td><span class="badge bg-primary"><%= p.code %></span></td>
                                <td><%= p.items ? p.items.length : 0 %> videos</td>
                                <td><%= new Date(p.createdAt).toLocaleDateString() %></td>
                                <td>
                                    <button class="btn btn-sm btn-danger" onclick="deletePlaylist('<%= p.id %>')">
                                        <i class="bi bi-trash"></i> Delete
                                    </button>
                                </td>
                            </tr>
                        <% }) %>
                    </tbody>
                </table>
            </div>
        </div>
        </div>
    </div>

    <%- include('../partials/scripts') %>
    <script>
        function deletePlaylist(playlistId) {
            if (!confirm('Are you sure you want to delete this playlist?')) return;
            fetch(`/admin/playlists/${playlistId}`, { method: 'DELETE' })
                .then(res => res.json())
                .then(data => data.success ? location.reload() : alert(data.message || 'Error'))
                .catch(err => alert('Error deleting playlist'));
        }
    </script>
</body>
</html>


